<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.center.demoapplication.activity.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#000000"
        android:gravity="center"
        android:layout_height="50dp">

        <TextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页面"/>


    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:background="#11000000"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_one"
            android:drawableTop="@drawable/select_tab1"
            style="@style/bottom_tab"
            android:text="本地视频"/>
        <RadioButton
            android:id="@+id/rb_two"
            android:drawableTop="@drawable/select_tab2"
            style="@style/bottom_tab"
            android:text="本地音乐"/>
        <RadioButton
            android:id="@+id/rb_three"
            android:drawableTop="@drawable/select_tab3"
            style="@style/bottom_tab"
            android:text="网络视频"/>
        <RadioButton
            android:id="@+id/rb_four"
            android:drawableTop="@drawable/select_tab4"
            style="@style/bottom_tab"
            android:text="网络音乐"/>

    </RadioGroup>
</LinearLayout>
