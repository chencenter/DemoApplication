<?xml version="1.0" encoding="utf-8"?>
<com.center.demoapplication.widget.ColorLinerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg">

    <com.center.demoapplication.widget.ColorTextView
        android:text="textview换色"
        android:gravity="center"
        android:textColor="?attr/main_textcolor"
        android:background="#5665ff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <com.center.demoapplication.widget.ColorButton
        android:id="@+id/btn"
        android:text="换肤"
        android:textColor="?attr/main_textcolor"
        android:background="#128dff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <com.center.demoapplication.widget.ColorButton
        android:id="@+id/btn_start"
        android:text="跳转到下一个页面"
        android:textColor="?attr/main_textcolor"
        android:background="#128dff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</com.center.demoapplication.widget.ColorLinerLayout>